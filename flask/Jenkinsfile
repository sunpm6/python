pipeline {
    agent any
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build') {
            steps {
                echo "Building...!!"
                chmod 755 flask
                sh './flask/build.sh'
            }
        }
        stage('Test'){
            steps {
                echo "Testing...!!"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying...!!"
                chmod 755 flask
                sh './flask/deploy.sh'
            }
        }
    }
}
